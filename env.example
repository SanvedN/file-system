# Database Configuration
DATABASE_URL=postgresql+asyncpg://username:password@localhost:5432/file_system_db
DB_HOST=localhost
DB_PORT=5432
DB_NAME=file_system_db
DB_USER=file_system_user
DB_PASSWORD=your_secure_password

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Storage Configuration
STORAGE_BASE_PATH=/app/storage
MAX_FILE_SIZE=104857600  # 100MB in bytes
ALLOWED_EXTENSIONS=.txt,.pdf,.doc,.docx,.xls,.xlsx,.zip,.json,.csv,.xml
MAX_ZIP_DEPTH=3

# Service Configuration
FILE_SERVICE_HOST=0.0.0.0
FILE_SERVICE_PORT=8001
EXTRACTION_SERVICE_HOST=0.0.0.0
EXTRACTION_SERVICE_PORT=8002
API_GATEWAY_HOST=0.0.0.0
API_GATEWAY_PORT=8000

# Security
SECRET_KEY=your-super-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Environment
ENVIRONMENT=development
DEBUG=true
